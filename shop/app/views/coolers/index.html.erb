<p id="notice"><%= notice %></p>

<h1>Coolers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Produced</th>
      <th>Brand</th>
      <th>Category</th>
      <th>Country</th>
      <th>Cooling</th>
      <th>Soket</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coolers.each do |cooler| %>
      <tr>
        <td><%= cooler.name %></td>
        <td><%= cooler.description %></td>
        <td><%= cooler.price %></td>
        <td><%= cooler.produced %></td>
        <td><%= cooler.brand_id %></td>
        <td><%= cooler.category_id %></td>
        <td><%= cooler.country_id %></td>
        <td><%= cooler.cooling_id %></td>
        <td><%= cooler.soket %></td>
        <td><%= link_to 'Show', cooler %></td>
        <td><%= link_to 'Edit', edit_cooler_path(cooler) %></td>
        <td><%= link_to 'Destroy', cooler, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cooler', new_cooler_path %>
