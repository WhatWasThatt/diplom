<p id="notice"><%= notice %></p>

<h1>Harddisks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Produced</th>
      <th>Brand</th>
      <th>Category</th>
      <th>Country</th>
      <th>Volume</th>
      <th>Interface</th>
      <th>Factor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @harddisks.each do |harddisk| %>
      <tr>
        <td><%= harddisk.name %></td>
        <td><%= harddisk.description %></td>
        <td><%= harddisk.price %></td>
        <td><%= harddisk.produced %></td>
        <td><%= harddisk.brand_id %></td>
        <td><%= harddisk.category_id %></td>
        <td><%= harddisk.country_id %></td>
        <td><%= harddisk.volume %></td>
        <td><%= harddisk.interface %></td>
        <td><%= harddisk.factor %></td>
        <td><%= link_to 'Show', harddisk %></td>
        <td><%= link_to 'Edit', edit_harddisk_path(harddisk) %></td>
        <td><%= link_to 'Destroy', harddisk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

