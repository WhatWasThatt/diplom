<p id="notice"><%= notice %></p>

<h1>Videocards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Produced</th>
      <th>Brand</th>
      <th>Category</th>
      <th>Country</th>
      <th>Processor</th>
      <th>Type</th>
      <th>Memory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videocards.each do |videocard| %>
      <tr>
        <td><%= videocard.name %></td>
        <td><%= videocard.description %></td>
        <td><%= videocard.price %></td>
        <td><%= videocard.produced %></td>
        <td><%= videocard.brand_id %></td>
        <td><%= videocard.category_id %></td>
        <td><%= videocard.country_id %></td>
        <td><%= videocard.processor %></td>
        <td><%= videocard.type %></td>
        <td><%= videocard.memory %></td>
        <td><%= link_to 'Show', videocard %></td>
        <td><%= link_to 'Edit', edit_videocard_path(videocard) %></td>
        <td><%= link_to 'Destroy', videocard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Videocard', new_videocard_path %>
